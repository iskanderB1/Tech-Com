<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tech_Com.Pages.LandingPage"
             Title="LandingPage">
    <VerticalStackLayout>
        <Label Text="please click a button corrisponding to a mode you want your phone to be in"/>

        <HorizontalStackLayout>
            <Button Text="User (connect to the server)" Clicked="UserMode"/>
            <Button Text="Server (please start a hotspot session)" Clicked="ServerMode"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>